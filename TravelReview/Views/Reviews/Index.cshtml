@model IEnumerable<TravelReview.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h1 class="Headline">Vacation Reviews</h1>


<div class="row">
    <!--Takes each review and puts it in a thumbnail, 3 thumbnails across medium pages-->
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <ul class="nav navbar-nav navbar-right">
                                <li>@Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-secondary", role = "button" })</li>
                            </ul>
                        </div>
                    </nav>
                    <h2>@Html.DisplayFor(modelItem => item.Location)</h2>
                    <h4>@Html.DisplayFor(modelItem => item.Category.Name)</h4>                    
                    <p><strong> Review Date: @Html.DisplayFor(modelItem => item.Published) </strong></p> 
                </div>
            </div>
        </div>
    }
</div>

